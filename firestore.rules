rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin yetkisi kontrolü fonksiyonu
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Kullanıcı dokümanları: Herkes kendi dokümanını okuyabilir ve yazabilir
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Ürünler: Herkes okuyabilir, sadece admin yazabilir
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Kategoriler: Herkes okuyabilir, sadece admin yazabilir
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Siparişler: Herkes oluşturabilir (anonim dahil), admin düzenleyebilir
    match /orders/{orderId} {
      allow read: if true;
      allow create: if true;
      allow update: if isAdmin();
    }

    // Kampanyalar: Herkes okuyabilir, sadece admin yazabilir
    match /campaigns/{campaignId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Çark Kullanımı: Herkes oluşturabilir ve okuyabilir (Session takibi için)
    match /wheel_uses/{useId} {
      allow read, create, update: if true;
    }
  }
}
