{
    "cleanUrls": true,
    "trailingSlash": false,
    "redirects": [
        {
            "source": "/index.html",
            "destination": "/",
            "permanent": true
        },
        {
            "source": "/index",
            "destination": "/",
            "permanent": true
        },
        {
            "source": "/products.html",
            "destination": "/products",
            "permanent": true
        },
        {
            "source": "/product.html",
            "destination": "/product",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/hakkimizda",
            "destination": "/about"
        },
        {
            "source": "/iletisim",
            "destination": "/contact"
        },
        {
            "source": "/urunler",
            "destination": "/products"
        }
    ],
    "functions": {
        "api/paytr-token.js": {
            "maxDuration": 30
        },
        "api/paytr-callback.js": {
            "maxDuration": 30
        },
        "api/send-order-email.js": {
            "maxDuration": 30
        }
    }
}